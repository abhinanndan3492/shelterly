<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2 row-cols-1">
  <% for(let listing of allListings) { %>
    <a href="/listings/<%= listing._id%>" class="listing-links">
  <div class="card col" ">
    <img
      src="<%= listing.image%>"
      class="card-img-top"
      alt="listing_image"
      style="width: 20rem"
    />
    <div class="card-img-overlay">a</div>
    <div class="card-body">
      <p class="card-text">
        <b><%= listing.title %></b>

        <br />
        &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
      </p>
    </div>
  </div>
  </a>

  <% } %>
</div>

